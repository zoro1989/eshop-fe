@import "variable.styl"

body, html
  line-height: 1
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  user-select: none
  -webkit-tap-highlight-color: transparent
  background: $color-background
  color: $color-text
  font-size: 14px
  height: 100%
  box-sizing: border-box
  #app
    height: 100%;
    //main-container全局样式
    .app-main
      min-height: 100%
    .app-container
      padding: 20px
*,
*:before,
*:after
  box-sizing: inherit

a,
a:focus,
a:hover
  cursor: pointer
  color: inherit
  outline: none
  text-decoration: none

div:focus
  outline: none

a:focus,
a:active
  outline: none

.clearfix
  &:after
    visibility: hidden
    display: block
    font-size: 0
    content: " "
    clear: both
    height: 0
